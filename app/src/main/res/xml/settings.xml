<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:key="app_settings">

    <androidx.preference.SwitchPreferenceCompat
        android:defaultValue="true"
        android:key="@string/pref_key_enable_capture_service"
        android:persistent="false"
        android:title="@string/settings_list_capture" />

    <androidx.preference.SwitchPreferenceCompat
        android:defaultValue="true"
        android:key="@string/pref_key_enable_floating_screenshot_button"
        android:layout="@layout/preference_screenshot_feature_sub_item"
        android:persistent="false"
        android:summary="@string/settings_detail_capture" />

    <androidx.preference.SwitchPreferenceCompat
        android:defaultValue="true"
        android:key="@string/pref_key_enable_add_to_collection"
        android:layout="@layout/preference_screenshot_feature_sub_item"
        android:persistent="false"
        android:summary="@string/settings_detail_sorting"
        android:title="@string/settings_list_sorting" />

    <org.mozilla.scryer.setting.TelemetrySwitchPreference
        android:defaultValue="true"
        android:key="@string/pref_key_enable_send_usage_data"
        android:layout="@layout/preference_telemetry_item"
        android:persistent="true"
        android:title="@string/settings_list_usagedata" />

    <androidx.preference.Preference
        android:key="@string/pref_key_give_feedback"
        android:persistent="false"
        android:title="@string/settings_list_feedback" />

    <androidx.preference.Preference
        android:key="@string/pref_key_share_with_friends"
        android:persistent="false"
        android:title="@string/settings_list_share" />

    <androidx.preference.Preference
        android:key="@string/pref_key_about"
        android:persistent="false"
        android:title="@string/settings_list_about" />

</androidx.preference.PreferenceScreen>